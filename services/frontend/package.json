    "autoprefixer": "^10.4.0",
    "axios": "^0.27.2",
    "babel-plugin-macros": "^3.1.0",
    "formik": "^2.2.9",
    "next": "12.3.4",
    "postcss": "^8.4.21",
    "react": "17.0.2",
    "react-datepicker": "^4.8.0",
    "react-dom": "17.0.2",
    "react-dropzone": "^14.2.3",
    "react-stripe-checkout": "^2.6.3",
    "react-toastify": "^9.1.1",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "tailwindcss": "^2.2.19",
