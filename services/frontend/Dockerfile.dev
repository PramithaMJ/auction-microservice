# Multi-stage build for better dependency management
FROM node:18-alpine AS common-builder

WORKDIR /app/common

# Copy common package files
COPY ../../common/package*.json ./
RUN npm install

# Copy common source and build
COPY ../../common/src ./src
COPY ../../common/tsconfig.json ./
RUN npm run build

# Main application stage
FROM node:18-alpine

WORKDIR /app

# Copy package files first
COPY package*.json ./

# Create node_modules/@jjmauction directory
RUN mkdir -p node_modules/@jjmauction

# Copy built common package from previous stage to the correct location
COPY --from=common-builder /app/common ./node_modules/@jjmauction/common

# Install main app dependencies (this will respect the existing common package)
RUN npm install --production=false

# Copy application source
COPY src ./src
COPY public ./public
COPY next.config.js ./
COPY .babelrc ./
COPY tsconfig.json ./
COPY tailwind.config.js ./
COPY postcss.config.js ./

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]