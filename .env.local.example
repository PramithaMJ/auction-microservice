# Default environment variables for docker-compose
# Set IMAGE_TAG to use specific versions

# Use latest images by default
IMAGE_TAG=latest

# Example: Use specific version
# IMAGE_TAG=v1.0.123

# Example: Use specific commit
# IMAGE_TAG=v1.0.123-abc1234

# For production, set to a specific stable version
# IMAGE_TAG=v1.0.100


# Docker Compose Environment Variables
# MySQL root password and database names
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=your_database_name
BID_MYSQL_DATABASE=your_bid_database_name
LISTINGS_MYSQL_DATABASE=your_listings_database_name
PAYMENTS_MYSQL_DATABASE=your_payments_database_name
PROFILE_MYSQL_DATABASE=your_profile_database_name

# API Gateway
API_GATEWAY_PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# JWT Key (shared across services)
JWT_KEY=your_very_secure_jwt_secret_key_here
# AWS Credentials (for listings service)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=your_aws_region_here
AWS_S3_BUCKET_NAME=your_aws_s3_bucket_name_here

# Stripe Key (for payments service)
STRIPE_KEY=sk_test_your_stripe_secret_key_here

# Email Service
EMAIL=your_email@example.com
EMAIL_PASSWORD=your_email_password_here

# Server IP
SERVER_IP=
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://${SERVER_IP:-localhost}:3001
NEXT_PUBLIC_API_GATEWAY_PORT=3001
SERVER_API_URL=http://${SERVER_IP:-localhost}:3001
NEXT_PUBLIC_SERVER_IP=${SERVER_IP:-localhost}
NEXT_PUBLIC_LISTINGS_SOCKET_URL=http://${SERVER_IP:-localhost}:3103/socket
WATCHPACK_POLLING=true

# NATS
NATS_URL=nats://nats-streaming:4222
NATS_CLUSTER_ID=auction
NATS_CLIENT_ID_AUTH=auth-service
NATS_CLIENT_ID_BID=bid-service
NATS_CLIENT_ID_LISTINGS=listings-service
NATS_CLIENT_ID_PAYMENTS=payments-service
NATS_CLIENT_ID_PROFILE=profile-service
NATS_CLIENT_ID_EMAIL=email-service
NATS_CLIENT_ID_SAGA=saga-orchestrator-service
NATS_CLIENT_ID_EXPIRATION=expiration-service

# MySQL URIs
AUTH_MYSQL_URI=mysql://root:${MYSQL_ROOT_PASSWORD}@auth-mysql:3306/auth
BID_MYSQL_URI=mysql://root:${MYSQL_ROOT_PASSWORD}@bid-mysql:3306/bid
LISTINGS_MYSQL_URI=mysql://root:${MYSQL_ROOT_PASSWORD}@listings-mysql:3306/listings
PAYMENTS_MYSQL_URI=mysql://root:${MYSQL_ROOT_PASSWORD}@payments-mysql:3306/payments
PROFILE_MYSQL_URI=mysql://root:${MYSQL_ROOT_PASSWORD}@profile-mysql:3306/profile

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:${REDIS_PORT}

# Service URLs
AUTH_SERVICE_URL=http://auth:3101
BID_SERVICE_URL=http://bid:3102
LISTINGS_SERVICE_URL=http://listings:3103
PAYMENTS_SERVICE_URL=http://payments:3104
PROFILE_SERVICE_URL=http://profile:3105
EMAIL_SERVICE_URL=http://email:3106
SAGA_ORCHESTRATOR_URL=http://saga-orchestrator:3108

# Service Ports
EXPIRATION_PORT=3107
PAYMENTS_PORT=3104
PROFILE_PORT=3105
EMAIL_PORT=3106
SAGA_ORCHESTRATOR_PORT=3108
BID_PORT=3102
LISTINGS_PORT=3103
PAYMENTS_PORT=3104
AUTH_PORT=3101
