# Production Environment Variables for Docker Hub Pull
# This file should be copied to .env.production and customized for your production environment

# Docker Image Tag (set by CI/CD pipeline)
IMAGE_TAG=latest

# MySQL Configuration
MYSQL_ROOT_PASSWORD=your_secure_mysql_password_here
MYSQL_DATABASE=auth
BID_MYSQL_DATABASE=bid
LISTINGS_MYSQL_DATABASE=listings
PAYMENTS_MYSQL_DATABASE=payments
PROFILE_MYSQL_DATABASE=profile

# Application Configuration
NODE_ENV=production
JWT_KEY=your_super_secure_jwt_key_here_minimum_32_characters

# Server Configuration (Update with your production server IP)
SERVER_IP=your.server.ip.here
FRONTEND_PORT=3000
FRONTEND_URL=http://your.server.ip.here:3000
NEXT_PUBLIC_API_URL=http://your.server.ip.here:3001
NEXT_PUBLIC_API_GATEWAY_PORT=3001
SERVER_API_URL=http://your.server.ip.here:3001
NEXT_PUBLIC_SERVER_IP=your.server.ip.here
NEXT_PUBLIC_LISTINGS_SOCKET_URL=http://your.server.ip.here:3103/socket

# CORS Configuration
CORS_ORIGIN=http://your.server.ip.here:3000,http://your.server.ip.here:3001,http://your.server.ip.here

# Service Ports
API_GATEWAY_PORT=3001
AUTH_PORT=3101
BID_PORT=3102
LISTINGS_PORT=3103
PAYMENTS_PORT=3104
PROFILE_PORT=3105
EMAIL_PORT=3106
EXPIRATION_PORT=3107
SAGA_ORCHESTRATOR_PORT=3108

# AWS Configuration (for S3 file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your_bucket_name_here

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
# Legacy variable for backward compatibility
STRIPE_KEY=your_stripe_secret_key_here

# Email Configuration
EMAIL=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password_here

# NATS Configuration
NATS_URL=nats://nats-streaming:4222
NATS_CLUSTER_ID=auction
NATS_CLIENT_ID_AUTH=auth-service
NATS_CLIENT_ID_BID=bid-service
NATS_CLIENT_ID_LISTINGS=listings-service
NATS_CLIENT_ID_PAYMENTS=payments-service
NATS_CLIENT_ID_PROFILE=profile-service
NATS_CLIENT_ID_EMAIL=email-service
NATS_CLIENT_ID_SAGA=saga-orchestrator-service
NATS_CLIENT_ID_EXPIRATION=expiration-service

# MySQL URIs (internal Docker network)
AUTH_MYSQL_URI=mysql://root:your_secure_mysql_password_here@auth-mysql:3306/auth
BID_MYSQL_URI=mysql://root:your_secure_mysql_password_here@bid-mysql:3306/bid
LISTINGS_MYSQL_URI=mysql://root:your_secure_mysql_password_here@listings-mysql:3306/listings
PAYMENTS_MYSQL_URI=mysql://root:your_secure_mysql_password_here@payments-mysql:3306/payments
PROFILE_MYSQL_URI=mysql://root:your_secure_mysql_password_here@profile-mysql:3306/profile

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# Internal Service URLs (Docker network)
AUTH_SERVICE_URL=http://auth:3101
BID_SERVICE_URL=http://bid:3102
LISTINGS_SERVICE_URL=http://listings:3103
PAYMENTS_SERVICE_URL=http://payments:3104
PROFILE_SERVICE_URL=http://profile:3105
EMAIL_SERVICE_URL=http://email:3106
SAGA_ORCHESTRATOR_URL=http://saga-orchestrator:3108

# Distributed Tracing (Jaeger)
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6832
OTEL_EXPORTER_JAEGER_ENDPOINT=http://jaeger:14268/api/traces
OTEL_TRACES_EXPORTER=jaeger
OTEL_SERVICE_NAME=auction-microservices
OTEL_RESOURCE_ATTRIBUTES=service.namespace=auction,service.version=1.0.0,deployment.environment=production
OTEL_TRACES_SAMPLER=always_on
OTEL_TRACES_SAMPLER_ARG=1.0

# Frontend Configuration
WATCHPACK_POLLING=false
