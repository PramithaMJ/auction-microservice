# Production Environment Configuration
# Copy this file to .env.production and configure for your environment

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================

# Full API URL (highest priority) - use this for custom domains or load balancers
# Example: https://api.yourdomain.com
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# API Gateway Port (used when NEXT_PUBLIC_API_URL is not set)
# The frontend will use current hostname with this port
NEXT_PUBLIC_API_GATEWAY_PORT=3001

# Frontend Port
FRONTEND_PORT=3000

# ==============================================
# API GATEWAY CONFIGURATION  
# ==============================================

# API Gateway Port
API_GATEWAY_PORT=3001

# CORS Origins - comma separated list of allowed origins
# Include both frontend URL and any additional domains
CORS_ORIGIN=http://YOUR_EC2_IP:3000,https://yourdomain.com

# For internal Docker communication (SSR)
SERVER_API_URL=http://api-gateway:3001

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# Database passwords (change these!)
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_PASSWORD=your_secure_password

# ==============================================
# JWT CONFIGURATION
# ==============================================

# JWT Secret (change this!)
JWT_KEY=your_very_secure_jwt_secret_key_here

# ==============================================
# EMAIL SERVICE CONFIGURATION
# ==============================================

# Email service credentials
EMAIL_SERVICE_USER=your_email@gmail.com
EMAIL_SERVICE_PASS=your_email_app_password

# ==============================================
# REDIS CONFIGURATION (for expiration service)
# ==============================================

REDIS_URL=redis://expiration-redis-srv:6379

# ==============================================
# NATS CONFIGURATION
# ==============================================

NATS_URL=http://nats-srv:4222
NATS_CLUSTER_ID=auction
NATS_CLIENT_ID=expiration

# ==============================================
# DOCKER IMAGE CONFIGURATION
# ==============================================

# Use specific versions for production
IMAGE_TAG=latest
